<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/splashLogo"
                    android:src="@mipmap/ic_launcher_foreground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_edit"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:layout_marginTop="14dp"/>

            <ImageButton
                    android:id="@+id/profileEdit_save"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/check_24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="140dp"
                    android:background="@color/colorPrimary"
/>

            <ImageButton
                    android:id="@+id/profileEdit_close"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/close"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/colorPrimary"
/>

        </LinearLayout>


    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/myphoto"
                    android:id="@+id/imageView"
                    app:layout_constraintTop_toTopOf="parent" tools:layout_editor_absoluteX="0dp"/>

            <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_account"
                    android:id="@+id/imageView2"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="@+id/profileEditName"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>

            <EditText
                    android:id="@+id/profileEditName"
                    android:layout_width="wrap_content"
                    android:textSize="28sp"
                    android:layout_height="wrap_content"
                    android:text="Your name"
                    android:inputType="text"
                    style="@style/TextAppearance.AppCompat.Title"
                    app:layout_constraintTop_toBottomOf="@+id/imageView"
                    app:layout_constraintStart_toEndOf="@+id/imageView2" android:layout_marginStart="8dp"/>
            <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_comment"
                    android:id="@+id/imageView3" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2"
                    app:layout_constraintStart_toStartOf="@+id/imageView2"/>

            <TextView
                    android:id="@+id/profileEditStatusTitle"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:text="Status: "
                    android:textColor="@color/text_profile"
                    style="@style/TextAppearance.AppCompat.Title"
                    app:layout_constraintStart_toEndOf="@+id/imageView3"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@+id/imageView3"/>

            <EditText
                    android:id="@+id/profileEditStatus"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:text="Your status"
                    android:inputType="text"
                    app:layout_constraintStart_toEndOf="@+id/profileEditStatusTitle"
                    app:layout_constraintTop_toBottomOf="@+id/profileEditName" android:layout_marginTop="4dp"/>

            <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_gift"
                    app:layout_constraintTop_toBottomOf="@+id/imageView3"
                    android:layout_marginTop="16dp"
                    android:id="@+id/imageView4" app:layout_constraintStart_toStartOf="@+id/imageView3"
            />

            <TextView
                    android:id="@+id/profileEditBirthdayTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Birthday: "
                    android:textColor="@color/text_profile"
                    style="@style/TextAppearance.AppCompat.Title"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@+id/imageView4"/>

            <EditText
                    android:id="@+id/profileEditBirthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    tools:text="Your birthday"
                    app:layout_constraintStart_toEndOf="@+id/profileEditBirthdayTitle"
                    android:inputType="date"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/profileEditStatusTitle"/>

            <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_city"
                    app:layout_constraintTop_toBottomOf="@+id/imageView4"
                    android:layout_marginTop="16dp" android:id="@+id/imageView5"
                    app:layout_constraintStart_toStartOf="@+id/imageView4"/>

            <TextView
                    android:id="@+id/profileEditCityTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="City: "
                    android:textColor="@color/text_profile"
                    style="@style/TextAppearance.AppCompat.Title"
                    app:layout_constraintStart_toEndOf="@+id/imageView5" android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@+id/imageView5"/>

            <EditText
                    android:id="@+id/profileEditCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    tools:text="Your city"
                    app:layout_constraintStart_toEndOf="@+id/profileEditCityTitle"
                    android:layout_marginStart="8dp"
                    android:inputType="text" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/profileEditBirthdayTitle"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>